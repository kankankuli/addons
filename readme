install ubuntu 20.04
update
snap install docker         
apt install docker-compose
upgrade
nano docker-compose.yml
//// 
version: '2'
services:
  db:
    image: postgres:latest
    environment:
      - POSTGRES_PASSWORD=odoo
      - POSTGRES_USER=odoo
      - POSTGRES_DB=postgres
    restart: always             # run as a service
    volumes:
        - ./postgresql:/var/lib/postgresql/data

  odoo13:
    image: odoo:13.0
    depends_on:
      - db
    ports:
      - "8069:8069"
#    tty: true
#    command: -- --dev=reload

    volumes:
      - ./addons:/mnt/extra-addons
      - ./addons-enterprise:/mnt/enterprise-addons
      - ./etc:/etc/odoo
    restart: always             # run as a service 
/////
docker-compose up -d
git clone https://github.com/kankankuli/addons.git
nano etc/odoo.conf
////
[options]
addons_path = /mnt/enterprise-addons,/mnt/extra-addons
data_dir = /var/lib/odoo

admin_passwd = Lsf7000+
;list_db = False
list_db = True
/////
wget https://www.soladrive.com/downloads/enterprise-13.0.tar.gz
tar -zxvf enterprise-13.0.tar.gz
mv 13.0 addons-enterprise
mv -v ~/13.0/* ~/addons/
docker-compose stop
docker-compose up -d

##########
install ubuntu 20.04
sudo -i
apt update && apt upgrade -y
apt-get install postgresql postgresql-server-dev-all -y
wget -O - https://nightly.odoo.com/odoo.key | apt-key add -
echo "deb http://nightly.odoo.com/13.0/nightly/deb/ ./" >> /etc/apt/sources.list
apt-get update && apt-get install odoo
sudo iptables -I INPUT 6 -m state --state NEW -p tcp --dport 8069 -j ACCEPT
sudo netfilter-persistent save
cd /etc/odoo
git clone https://github.com/kankankuli/addons.git
wget https://www.soladrive.com/downloads/enterprise-13.0.tar.gz
tar -zxvf enterprise-13.0.tar.gz
nano /etc/odoo/odoo.conf
## add addons path
wget https://github.com/wkhtmltopdf/packaging/releases/download/0.12.6-1/wkhtmltox_0.12.6-1.focal_amd64.deb
apt install -f
dpkg -i wkhtmltox_0.12.6-1.focal_amd64.deb
ln -s /usr/local/bin/wkhtmltopdf /usr/bin
ln -s /usr/local/bin/wkhtmltoimage /usr/bin
systemctl restart odoo.service
############
##########
##########
