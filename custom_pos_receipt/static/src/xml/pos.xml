    <t t-name="ProductScreenWidget">
        <div class="product-screen screen">
            <div class="leftpane">
                <div class='window'>
                    <div class='subwindow'>
                        <div class='subwindow-container'>
                            <div class='subwindow-container-fix'>
                                <div class="placeholder-OrderWidget"></div>
                            </div>
                        </div>
